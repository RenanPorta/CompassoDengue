<html lang="pt-br">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <!-- Reset -->
        <link rel="stylesheet" href="/estatico/css/reset.css" />
        <link rel="stylesheet" href="/estatico/css/normalize.css" />
        <title>Cadastro de Funcionário</title>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
            integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
        <link rel="stylesheet" href="/estatico/css/cor-principal.css" />
        <link rel="stylesheet" href="/estatico/css/header.css" />
        <link rel="stylesheet" href="/estatico/css/footer.css" />
        <link rel="stylesheet" href="/estatico/css/main.css" />
    </head>

    <body>
        <header>
            <nav class="color nav navbar-expand-md justify-content-between">
                <img class="logo-header rounded p-3" src="/estatico/img/logo.png" alt="Logo da prefeitura de Mogi Mirim">
        
                <div class="nav justify-content-center align-self-center">
                    <a class="btn-principal nav-item btn m-1" href="/home">Voltar</a>                        
                </div>                
            </nav>
        </header>

        <main class="container">
            <h1 class="text-center display-4 py-4">Cadastro de Funcionário</h1>

            <form class="needs-validation" name="cadastraFuncionario" method="post" action="/funcionario" novalidate>

                <div if(data.erroCpf)>
                    <div>
                        <h5 class="erroSenhaEmail">CPF invalido!</h5>
                    </div>
                </div>
                <div if(data.erro)>
                    <div>
                        <h5 class="erroSenhaEmail">${data.erro.erro}</h5>
                    </div>
                </div>

                <input class="form-control" type="hidden" id="id" name="id" />

                <div class="form-row">
                    <div class="col-md-12 mb-3">
                        <label for="nomeFuncionario">Nome</label>
                        <input type="text" class="form-control input-form" id="nomeFuncionario" name="nomeFuncionario" 
                        placeholder="Insira o nome" value="" required>
                        <div class="valid-feedback">
                            Validado.
                        </div>
                        <div class="invalid-feedback">
                            Insira um nome.
                        </div>
                    </div>
                </div>
                 <div class="form-row">
                    <div class="col-md-6 mb-3">
                        <label for="cpfFuncionario">CPF</label>
                        <input type="text" class="form-control input-form" id="cpfFuncionario" name="cpfFuncionario" 
                        placeholder="999.999.999-99" value="" pattern=".{14}" required> 
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="telefoneFuncionario">Telefone</label>
                        <input type="text" class="form-control input-form" id="telefoneFuncionario" name="telefoneFuncionario" 
                        placeholder="(99) 99999-9999" value="" pattern=".{15}" required>
                        <div class="valid-feedback">
                            Validado.
                        </div>
                        <div class="invalid-feedback">
                            Insira um Telefone Válido.
                        </div>
                    </div>
                </div>
                <div class="form-row">
                    <div class="col-md-12 mb-3">
                        <label for="emailFuncionario">E-mail</label>
                        <input type="email" class="form-control input-form" id="emailFuncionario" name="emailFuncionario" 
                        placeholder="Insira o E-mail" value="" required>
                        <div class="valid-feedback">
                            Validado.
                        </div>
                        <div class="invalid-feedback">
                            Insira um E-mail válido.
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-6 mb-3">
                        <label for="senhaFuncionario">Senha</label>
                        <input class="form-control input-form" type="password" minlength="6" id="senhaFuncionario" name="senhaFuncionario" />
                    </div>
                    <div class="form-group col-md-6 mb-3">
                        <label for="confirmaSenhaFuncionario">Confirmar Senha</label>
                        <input class="form-control input-form" type="password" minlength="6" id="confirmaSenhaFuncionario"
                            name="confirmaSenhaFuncionario" />
                    </div>

                    <div class="form-group col-md-4 mb3">
                        <label for="nivelAcesso">Cargo</label>
                        <select id="nivelAcesso" name="nivelAcesso" class="form-control input-form" required>
                        <option readonly></option>
                        <option value="Administrador">Administrador</option>
                        <option value="Agente de Saúde">Agente de Saúde</option>
                        </select>
                    </div>
                </div>

                <div class="row justify-content-center">
                    <div class="col-sm-6 col-md-6 col-lg-4">
                        <button type="submit" class="btn btn-custom btn-lg btn-block" onclick="return validar()"
                            onsubmit="unmask()">Cadastrar</button>
                    </div>
                </div>
            </form>
        </main>

        <footer>
            <div class="container-fluid color text-center p-3">
                <img class="logo-footer rounded img-fluid" src="/estatico/img/logo-2.png" alt="Logo 2 da prefeitura de Mogi Mirim">

                <p class="mb-1">Copyright © 2020 | Todos os direitos reservados. Prefeitura de Mogi Mirim.</p>
                <p>Rua Doutor José Alves, 129 - Centro - 13800-900 - Mogi Mirim - SP - Brasil.
                    Tel.19 3814.1000</p>
            </div>
        </footer>

        <script src="/estatico/js/validacao-campos.js"></script>
        <script src="https://code.jquery.com/jquery-3.5.1.min.js"
            integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.16/jquery.mask.min.js"></script>

        <script type="text/javascript">

            function unmask() {
                $('#cpfFuncionario').unmask()
                $('#telefoneFuncionario').unmask()
            }

            $(function () {
                $('#cpfFuncionario').mask('000.000.000-00')
                $('#telefoneFuncionario').mask('(00) 00000-0000')
            })

            function validar() {
                var senha = cadastraFuncionario.senhaFuncionario.value;
                var confirmaSenha = cadastraFuncionario.confirmaSenhaFuncionario.value;

                if (senha == "" || senha.length <= 5) {
                    alert('Preencha o campo "Senha" com no minímo 6 caracteres');
                    cadastraFuncionario.senhaFuncionario.focus();
                    return false;
                }

                if (confirmaSenha == "") {
                    alert('Preencha o campo "Confirmar Senha"');
                    cadastraFuncionario.confirmaSenhaFuncionario.focus();
                    return false;
                }

                if (senha != confirmaSenha) {
                    alert('Senhas diferentes!');
                    cadastraFuncionario.confirmaSenhaFuncionario.focus();
                    return false;
                }
            }        
        </script>
    </body>
</html>